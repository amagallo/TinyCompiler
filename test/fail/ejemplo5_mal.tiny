@ Programa de ejemplo que soluciona las torres de hanoi

proc hanoi(discos: int, temporal: string, i: string, f: string)
begin
    if discos == 1 
        nl; write 'El disco '; write discos; write ' se ha movido de '; write i; write ' hasta '; write f; nl;
    else 
        hanoi(discos - 1, i, temporal, f);
        nl; write 'El disco '; write discos; write ' se ha movido de '; write i; write ' hasta '; write f; nl; 
        hanoi(discos - 1, temporal, f, i);  
    end;
end;
begin
    hanoi(5, 'aux', 'inicio', 'fin');
end;