proc suma(r1:real, r2:real)
    begin
    write 'RESULTADO: '; nl;
    write (r1 + r2); nl; nl;
    end;

proc resta(r1:real, r2:real)
    begin
    write 'RESULTADO: '; nl;
    write (r1 - r2); nl; nl;
    end;

proc mult(r1:real, r2:real)
    begin
    write 'RESULTADO: '; nl;
    write (r1 * r2); nl; nl;
    end;

proc divEnt(e1:int, e2:int)
    begin
    write 'RESULTADO: '; nl;
    write (e1 / e2); nl; nl;
    end;

proc divReal(r1:real, r2:real)
    begin
    write 'RESULTADO: '; nl;
    write (r1 / r2); nl; nl;
    end;


proc inv(r1:real)
    begin
    write 'RESULTADO: '; nl;
    write (- r1); nl; nl;
    end;


